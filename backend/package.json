    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "moment": "^2.30.1",
    "nanoid": "3.3.4",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "url-metadata": "^4.1.1"
  },
